<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="idAddDishDialog"
        title="Add New Aloo Dish"
        stretchOnPhone="true">
        <VBox class="sapUiSmallMargin">
            <Label text="Dish Name" />
            <Input id="idDishName" placeholder="e.g. Aloo Samosa" />

            <Label text="Category" />
            <Input id="idDishCategory" placeholder="e.g. Fried / Air-Fried / Snacks" />

            <Label text="Price (â‚¹)" />
            <Input id="idDishPrice" type="Number" placeholder="e.g. 50" />

            <HBox alignItems="Center">
                <CheckBox id="idDishHealthy" />
                <Label text="Healthy Option" labelFor="idDishHealthy" class="sapUiTinyMarginBegin" />
            </HBox>
        </VBox>

        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveDish" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelAddDish" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
